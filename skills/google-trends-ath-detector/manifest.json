{
  "name": "google-trends-ath-detector",
  "version": "0.1.1",
  "displayName": "Google Trends ATH Detector",
  "description": "專注於 Google Trends 數據擷取與分析，使用 Selenium 模擬真人瀏覽器行為抓取數據，自動判定搜尋趨勢是否創下歷史新高（ATH）或出現異常飆升，並提供訊號分型。",
  "author": "Ricky Wang",
  "license": "MIT",
  "category": "indicator-monitoring",
  "tags": [
    "Google Trends",
    "ATH",
    "歷史新高",
    "情緒指標",
    "異常偵測",
    "搜尋趨勢",
    "訊號分型",
    "Selenium",
    "爬蟲"
  ],
  "dataLevel": "free-nolimit",
  "dependencies": {
    "python": ">=3.8",
    "packages": [
      "selenium>=4.0.0",
      "webdriver-manager>=4.0.0",
      "beautifulsoup4>=4.12.0",
      "lxml>=4.9.0",
      "loguru>=0.7.0"
    ],
    "optional": []
  },
  "entryPoints": {
    "skill": "SKILL.md",
    "mainScript": "scripts/trend_fetcher.py"
  },
  "workflows": [
    {
      "id": "detect",
      "name": "快速偵測",
      "description": "快速偵測 ATH 與異常分數",
      "file": "workflows/detect.md"
    },
    {
      "id": "analyze",
      "name": "深度分析",
      "description": "深度分析、訊號分型、驅動詞彙提取",
      "file": "workflows/analyze.md"
    },
    {
      "id": "compare",
      "name": "趨勢比較",
      "description": "多主題趨勢共振分析",
      "file": "workflows/compare.md"
    }
  ],
  "references": [
    "references/input-schema.md",
    "references/data-sources.md",
    "references/signal-types.md",
    "references/seasonality-guide.md"
  ],
  "templates": [
    "templates/output-schema.yaml"
  ],
  "examples": [
    "examples/health_insurance_ath.json",
    "examples/seasonal_vs_anomaly.json",
    "examples/multi_topic_comparison.json"
  ],
  "dataSources": [
    {
      "name": "Google Trends",
      "type": "primary",
      "url": "https://trends.google.com",
      "api": "Selenium (human-like crawling)"
    }
  ],
  "crawlerConfig": {
    "type": "selenium",
    "antiDetection": {
      "removeWebdriver": true,
      "randomUserAgent": true,
      "randomDelay": {
        "minSec": 0.5,
        "maxSec": 2.0
      },
      "disableAutomationExtension": true
    },
    "browser": "chrome",
    "headless": true
  }
}