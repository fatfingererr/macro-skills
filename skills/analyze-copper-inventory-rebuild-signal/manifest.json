{
  "name": "analyze-copper-inventory-rebuild-signal",
  "version": "0.1.0",
  "displayName": "分析銅庫存回補訊號",
  "description": "用「庫存快速回補」作為短期警戒訊號，評估銅價是否接近短線高點，同時給出一個「長期是否偏便宜」的歷史分位數判讀。",
  "author": "Ricky Wang",
  "license": "MIT",
  "category": "commodity-sd",
  "tags": [
    "銅",
    "庫存",
    "SHFE",
    "COMEX",
    "期貨",
    "技術分析",
    "分位數",
    "短期訊號",
    "長期價值",
    "原物料"
  ],
  "dataLevel": "free-nolimit",
  "dependencies": {
    "python": ">=3.9",
    "packages": [
      "pandas>=1.5.0",
      "numpy>=1.20.0",
      "requests>=2.28.0",
      "websocket-client>=1.3.0",
      "yfinance>=0.2.0"
    ],
    "optional": [
      "matplotlib>=3.5.0"
    ]
  },
  "entryPoints": {
    "skill": "SKILL.md",
    "mainScript": "scripts/inventory_signal_analyzer.py"
  },
  "workflows": [
    {
      "id": "quick-check",
      "name": "快速檢查",
      "description": "檢查當前 SHFE 庫存回補訊號狀態",
      "file": "workflows/quick-check.md"
    },
    {
      "id": "full-analysis",
      "name": "完整分析",
      "description": "執行回補訊號與價格高點的歷史驗證",
      "file": "workflows/full-analysis.md"
    },
    {
      "id": "visualize",
      "name": "視覺化",
      "description": "生成 Bloomberg 風格分析圖表",
      "file": "workflows/visualize.md"
    }
  ],
  "references": [
    "references/data-sources.md",
    "references/methodology.md",
    "references/historical-episodes.md"
  ],
  "templates": [
    "templates/output-json.md",
    "templates/output-markdown.md"
  ],
  "examples": [
    "examples/sample_output.json"
  ],
  "dataSources": [
    {
      "name": "MacroMicro SHFE Copper Inventory",
      "type": "primary",
      "tier": 0,
      "url": "https://en.macromicro.me/series/8743/copper-shfe-warehouse-stock",
      "description": "SHFE 銅可交割庫存數據，透過 CDP 抓取 Highcharts 圖表"
    },
    {
      "name": "Yahoo Finance Copper Futures",
      "type": "primary",
      "tier": 0,
      "url": "https://finance.yahoo.com/quote/HG=F",
      "description": "COMEX 銅期貨連續近月價格，透過 yfinance 取得"
    }
  ]
}