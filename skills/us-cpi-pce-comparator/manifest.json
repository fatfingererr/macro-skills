{
  "name": "us-cpi-pce-comparator",
  "version": "0.1.0",
  "displayName": "US CPI/PCE 通膨比較器",
  "description": "自動比較 CPI（固定權重）與 PCE（動態權重）的通膨訊號，識別低波動高權重桶位的 PCE 上行風險。用於分析 Fed 關注的 PCE 是否正在 re-accelerate，即使 CPI 看似降溫。",
  "author": "Ricky Wang",
  "license": "MIT",
  "category": "macro-indicator",
  "tags": [
    "CPI",
    "PCE",
    "通膨",
    "Fed",
    "權重差異",
    "FRED",
    "BLS",
    "風險訊號",
    "宏觀經濟"
  ],
  "dataLevel": "free-nolimit",
  "dependencies": {
    "python": ">=3.8",
    "packages": [
      "pandas>=1.5.0",
      "numpy>=1.20.0",
      "requests>=2.28.0"
    ],
    "optional": []
  },
  "entryPoints": {
    "skill": "SKILL.md",
    "mainScript": "scripts/cpi_pce_analyzer.py"
  },
  "workflows": [
    {
      "id": "analyze",
      "name": "完整分析",
      "description": "完整三步驟分析：Headline → Attribution → Risk Framing",
      "file": "workflows/analyze.md"
    },
    {
      "id": "quick-check",
      "name": "快速檢查",
      "description": "快速查看最新的 CPI/PCE 分歧數據",
      "file": "workflows/quick-check.md"
    }
  ],
  "references": [
    "references/data-sources.md",
    "references/cpi-pce-methodology.md",
    "references/implementation.md"
  ],
  "templates": [
    "templates/output-json.md",
    "templates/output-markdown.md"
  ],
  "examples": [],
  "dataSources": [
    {
      "name": "FRED",
      "type": "primary",
      "url": "https://fred.stlouisfed.org",
      "api": "CSV endpoint (no API key required)"
    },
    {
      "name": "BLS",
      "type": "primary",
      "url": "https://www.bls.gov",
      "api": "Public API v2"
    }
  ]
}
