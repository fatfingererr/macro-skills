{
  "name": "track-equity-cumulative-return",
  "version": "0.1.0",
  "displayName": "追蹤股票累積報酬率",
  "description": "追蹤股票/指數的累積報酬率，支援多標的比較、指數成分股 Top N 排名，並輸出視覺化圖表。固定使用 S&P 500 作為基準。",
  "lastUpdated": "2026-01-28",
  "author": {
    "name": "macro-skills"
  },
  "license": "MIT",
  "category": "indicator-monitoring",
  "tags": [
    "股票",
    "報酬率",
    "累積報酬",
    "CAGR",
    "年化報酬",
    "基準比較",
    "指數成分股",
    "選股",
    "視覺化"
  ],
  "dataLevel": "free-nolimit",
  "dependencies": {
    "python": ">=3.8",
    "packages": [
      "pandas>=1.5.0",
      "numpy>=1.20.0",
      "yfinance>=0.2.0",
      "matplotlib>=3.5.0"
    ],
    "optional": []
  },
  "entryPoints": {
    "skill": "SKILL.md",
    "mainScript": "scripts/cumulative_return_analyzer.py"
  },
  "workflows": [
    {
      "id": "quick-check",
      "name": "快速檢查",
      "description": "快速查看單一標的的累積報酬率",
      "file": "workflows/quick-check.md"
    },
    {
      "id": "compare",
      "name": "多標的比較",
      "description": "比較多個股票/指數的累積報酬率",
      "file": "workflows/compare.md"
    },
    {
      "id": "top-n",
      "name": "指數 Top N 分析",
      "description": "分析指數成分股的 Top N 績效",
      "file": "workflows/top-n.md"
    }
  ],
  "references": [
    "references/methodology.md",
    "references/data-sources.md",
    "references/input-schema.md",
    "references/index-components.md"
  ],
  "templates": [
    "templates/output-json.md",
    "templates/output-markdown.md"
  ],
  "examples": [
    "examples/sample_output.json"
  ],
  "tests": [
    "scripts/tests/test_calculations.py",
    "scripts/tests/golden_cases.json"
  ],
  "scripts": [
    "scripts/fetch_price_data.py",
    "scripts/cumulative_return_analyzer.py",
    "scripts/index_component_analyzer.py",
    "scripts/visualize_cumulative.py",
    "scripts/validators.py"
  ],
  "dataSources": [
    {
      "name": "Yahoo Finance",
      "type": "primary",
      "url": "https://finance.yahoo.com",
      "api": "yfinance 套件"
    }
  ]
}